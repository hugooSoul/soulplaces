<div class="row">

  <div class="col-md-4">
    <h3><%= @place.name %></h3>
    <p><strong>Adress</strong>
      <%= @place.address %></p>
    <p><strong>Phone</strong>
      <%= @place.phone %></p>
    <p><strong>Website</strong>
      <%= @place.website %></p>
    <p><strong>Description</strong>
      <%= @place.description %></p>

    <div id="map_canvas" style="width:230px; height:230px"></div>
  </div>

  <div class="col-md-8">

    <h3>Reviews by People</h3>


  </div>
</div>


<script type="text/javascript">
      function initialize() {
        //var mycenter = {<%= @place.latitude %>, <%= @place.longitude %>}
        var mycenter2 = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>)
        var mapOptions = {
          center: mycenter2,
          zoom: 8,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map_canvas"),
            mapOptions);
        var marker = new google.maps.Marker({
          position: mycenter2,
          map: map
        });
      }
</script>
